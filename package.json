{
  "name": "web-visual-bookmark",
  "displayName": "Bookmark Style - Style your visual bookmark",
  "description": "One-click turn any link into a visual bookmark, and it looks like `Twitter` cards or `Notion` web bookmark.",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "rimraf extension/dev && run-p dev:*",
    "dev:prepare": "esno scripts/prepare-dev.ts dev",
    "dev:web": "vite",
    "dev:js": "npm run build:dev -- --watch src",
    "build": "run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare-prod.ts build",
    "build:web": "vite build",
    "build:js": "npm run build:prod -- --minify",
    "build:dev": "tsup src/background --format iife --out-dir extension/dev/dist --no-splitting --onSuccess 'esno scripts/mvsw-dev.ts'",
    "build:prod": "tsup src/background --format iife --out-dir extension/prod/dist --no-splitting --onSuccess 'esno scripts/mvsw-prod.ts'",
    "clear": "rimraf extension/prod"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "copy-image-clipboard": "^2.0.1",
    "dayjs": "^1.10.6",
    "dom-to-image": "^2.6.0",
    "fancy-qrcode": "^0.1.0",
    "vue-i18n": "^9.1.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.7.0",
    "@iconify/json": "^1.1.379",
    "@intlify/vite-plugin-vue-i18n": "^2.4.0",
    "@types/chrome": "^0.0.154",
    "@types/dom-to-image": "^2.6.4",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.4.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/compiler-sfc": "^3.2.33",
    "@vueuse/core": "^8.2.6",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "esno": "^0.8.0",
    "fs-extra": "^10.0.0",
    "kolorist": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.37.5",
    "tsup": "^4.12.5",
    "typescript": "^4.3.5",
    "unplugin-icons": "^0.14.1",
    "unplugin-vue-components": "^0.19.3",
    "vite": "^2.9.5",
    "vite-plugin-windicss": "^1.8.4",
    "vue": "^3.2.33",
    "vue-demi": "^0.11.2",
    "vue-global-api": "^0.2.4",
    "webext-bridge": "^4.0.0",
    "webextension-polyfill-ts": "^0.26.0",
    "windicss": "^3.5.1"
  }
}
